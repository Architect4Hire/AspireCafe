{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
    "authentication": {
      "ClusterId": "authenticationCluster",
      "Match": {
        "Path": "/auth/{**catch-all}"
      }
    },
    "barista": {
      "ClusterId": "baristaCluster",
      "Match": {
        "Path": "/barista/{**catch-all}"
      }
    },
    "counter": {
      "ClusterId": "counterCluster",
      "Match": {
        "Path": "/counter/{**catch-all}"
      }
    },
    "kitchen": {
      "ClusterId": "kitchenCluster",
      "Match": {
        "Path": "/kitchen/{**catch-all}"
      }
    },
    "product": {
      "ClusterId": "productCluster",
      "Match": {
        "Path": "/product/{**catch-all}"
      }
    },
      "ordersummary": {
        "ClusterId": "ordersummaryCluster",
        "Match": {
          "Path": "/ordersummary/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "authenticationCluster": {
        "Destinations": {
          "auth": { "Address": "http://localhost:5001/" }
        }
      },
      "baristaCluster": {
        "Destinations": {
          "barista": { "Address": "http://localhost:5002/" }
        }
      },
      "counterCluster": {
        "Destinations": {
          "counter": { "Address": "http://localhost:5003/" }
        }
      },
      "kitchenCluster": {
        "Destinations": {
          "kitchen": { "Address": "http://localhost:5004/" }
        }
      },
      "productCluster": {
        "Destinations": {
          "product": { "Address": "http://localhost:5005/" }
        }
      },
      "ordersummaryCluster": {
        "Destinations": {
          "ordersummary": { "Address": "http://localhost:5006/" }
        }
      }
    }
  }
}
